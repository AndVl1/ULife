<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/student_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Иванов"/>

    <TextView
        app:layout_constraintStart_toEndOf="@id/student_surname"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/student_name"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Иван"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_name"
        android:id="@+id/student_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ivanov@gmail.com"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_email"
        android:id="@+id/student_telegram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ivan_tg"/>


</androidx.constraintlayout.widget.ConstraintLayout>